[color]
	status = auto
	diff = auto

[color "status"]
	added = green
	untracked = magenta
	deleted = red
[alias]
	st = status
	up = pull --rebase
	ready = rebase -i @{u}
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	standup = log --since yesterday
	co = checkout
	cl = clone
	ci = commit
	pu = push
	br = branch
[core]
	editor = vim
	fileMode = false
	autocrlf = false
[include]
    path = .gitconfig.user